<?xml version="1.0" encoding="utf-8"?>
<com.vanvatcorporation.doubleclips.activities.editing.TextEditSpecificAreaScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editSpecificArea"
    android:layout_below="@id/timestampBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"

        android:background="@color/colorPalette1_4"

        app:strokeColor="@color/colorSoftBackground"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/lowerRoundedImageView"/>
    <ImageButton
        android:id="@+id/closeWindowButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_close_24"/>











    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/closeWindowButton">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Text content"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/textContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/textText"
                android:background="@null"
                android:hint="Text"
                android:textSize="18sp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Text size"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/sizeContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/sizeText"
                android:background="@null"
                android:hint="Text"
                android:textSize="18sp"/>


        </LinearLayout>
    </LinearLayout>
    </ScrollView>




</com.vanvatcorporation.doubleclips.activities.editing.TextEditSpecificAreaScreen>
