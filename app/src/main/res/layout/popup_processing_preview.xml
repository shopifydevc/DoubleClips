<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/alert_processing_preview"
        android:textSize="26sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">


        <TextView
            android:id="@+id/adsDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/processing"/>
        <TextView
            android:id="@+id/processingDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/adsDescriptionText"
            android:hint="@string/processing"/>

        <ProgressBar
            android:id="@+id/previewProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_below="@id/processingDescription"/>

        <TextView
            android:id="@+id/processingPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_below="@id/previewProgressBar"
            android:hint="32%"/>

    </RelativeLayout>


</LinearLayout>
