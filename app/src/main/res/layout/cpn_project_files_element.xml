<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:background="@color/colorPalette1_4"

        app:strokeColor="@color/colorGlassBackground"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/previewImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"


        android:background="@color/colorGlassBackground"

        app:strokeColor="@color/colorPrimaryBackground"
        app:strokeWidth="2dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/previewImage"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryButton"
        android:text="replacable template name" />



</RelativeLayout>