<?xml version="1.0" encoding="utf-8"?>

<com.vanvatcorporation.doubleclips.activities.main.ProfileAreaScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/titleFrame"
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:background="@color/colorPalette1_2"

            app:shapeAppearanceOverlay="@style/upperRoundedImageView"
            app:strokeColor="@color/colorSoftBackground"
            app:strokeWidth="1dp" />



        <RelativeLayout
            android:id="@+id/addProjectPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileAvatarImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"


                android:background="@color/colorPalette1_4"

                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:strokeColor="@color/colorSoftBlueBackground"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profileAvatarImage"
                android:layout_alignTop="@id/profileAvatarImage"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="0dp"
                android:gravity="start|center"
                android:text="Van Vat Employee"
                android:textColor="@color/colorPrimaryBackground"
                android:textSize="24sp" />



            <RelativeLayout
                android:id="@+id/signInScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"


                    android:background="@color/fadeGray"

                    app:shapeAppearanceOverlay="@style/roundedImageView"
                    app:strokeColor="@color/colorSoftBlueBackground"
                    app:strokeWidth="1dp" />
                <Button
                    android:id="@+id/signInButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/settings_account_sign_in"/>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/titleFrame"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"

        android:layout_marginBottom="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:background="@color/colorPalette1_4"

                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:strokeColor="@color/colorSoftBlueBackground"
                app:strokeWidth="1dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="10dp">

                <com.vanvatcorporation.doubleclips.impl.SectionView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sectionTitle="@string/settings_group_general">
                    <Button
                        android:id="@+id/settingsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_settings" />

                </com.vanvatcorporation.doubleclips.impl.SectionView>
                <com.vanvatcorporation.doubleclips.impl.SectionView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sectionTitle="@string/settings_group_account">

                    <Button
                        android:id="@+id/statisticsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_account_statistics"/>

                    <Button
                        android:id="@+id/logOutButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_account_log_out"/>



                </com.vanvatcorporation.doubleclips.impl.SectionView>

            </LinearLayout>

        </RelativeLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <ProgressBar
        android:id="@+id/progressBarFetchingBook"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:visibility="gone" />


</com.vanvatcorporation.doubleclips.activities.main.ProfileAreaScreen>